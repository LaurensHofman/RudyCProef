<RibbonWindow x:Class="Rudycommerce.NavigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rudycommerce"
        mc:Ignorable="d"
        Title="NavigationWindow" WindowState="Maximized" Height="350" Width="525">
    <Grid>
        <Ribbon x:Name="rbnNavigation" Height="142" VerticalAlignment="Top" Margin="0,0,0.4,0">
           
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu KeyTip="F">
                    <RibbonApplicationMenuItem x:Name="ramiManageCurrentAccount" Header="{DynamicResource ResourceKey=manageAccount}" Click="ramiManageCurrentAccount_Click"/>
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab Header="{DynamicResource ResourceKey=language}">
                <RibbonGroup Header="Manage Languages">
                    <RibbonButton x:Name="rbtnAddLanguage" Label="{DynamicResource ResourceKey=addLanguage}" Click="rbtnAddLanguage_Click"/>
                    <RibbonButton x:Name="rbtnOverviewLanguage" Label="{DynamicResource ResourceKey=languageOverview}" Click="rbtnOverviewLanguage_Click"/>
                </RibbonGroup>
                <RibbonGroup Header="Product">
                    <RibbonButton x:Name="rbtnAddProduct" Label="{DynamicResource ResourceKey=addProduct}" Click="rbtnAddProduct_Click"/>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        
        <ContentControl x:Name="navigationControl" Margin="0,142,0.4,-0.2"/>

    </Grid>
</RibbonWindow>
