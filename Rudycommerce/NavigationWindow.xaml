<Controls:MetroWindow x:Class="Rudycommerce.NavigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:Rudycommerce"
        mc:Ignorable="d"
        Title="{DynamicResource ResourceKey=NavigationWindowTitle}" WindowState="Maximized">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LanguageResources/Dutch.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="Beige">
        <Controls:MetroAnimatedSingleRowTabControl x:Name="AnimatedTabControl" Background="Beige" Foreground="Black" HorizontalAlignment="Stretch" >
            <TabItem x:Name="tabItemProducts" Header="{DynamicResource ResourceKey=ManageProducts}" Foreground="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,0">
                <Grid x:Name="grdProducts" Background="Beige" VerticalAlignment="Top">
                    <Separator VerticalAlignment="Top" Margin="50,0,50,0"></Separator>
                    <StackPanel HorizontalAlignment="Stretch" Margin="0,20,0,0" VerticalAlignment="Top">
                        <WrapPanel Margin="0,0,0,80" HorizontalAlignment="Center">
                            <Controls:Tile x:Name="tabTileAddProduct" Width="150" Height="150" Title="{DynamicResource ResourceKey=AddProduct}" 
                                       Click="tabTileAddProduct_Click" Content="//TODO InsertImage" Margin="40,0,40,0"/>
                        </WrapPanel>
                        <Separator Opacity="0.10" Margin="50,-40,50,40"/>
                        <WrapPanel Margin="0,0,0,80" HorizontalAlignment="Center">
                            <Controls:Tile x:Name="tabTileAddCategory" Width="150" Height="150" Title="{DynamicResource ResourceKey=AddCategory}" 
                                       Click="tabTileAddCategory_Click" Content="//TODO InsertImage" Margin="40,0,40,0"/>
                        </WrapPanel>
                        <Separator Opacity="0.10" Margin="50,-40,50,40"/>
                        <WrapPanel Margin="0,0,0,80" HorizontalAlignment="Center">
                            <Controls:Tile x:Name="tabTileAddProductProperty" Width="150" Height="150" Title="{DynamicResource ResourceKey=AddProductProperty}" 
                                       Click="tabTileAddProductProperty_Click" Content="//TODO InsertImage" Margin="40,0,40,0"/>
                        </WrapPanel>        
                    </StackPanel>
                    <ContentControl x:Name="userControlProducts" Margin="0,20,0,0" />
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemLanguages" Header="{DynamicResource ResourceKey=ManageLanguages}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,0,-20,0">
                <Grid x:Name="grdLanguages" Background="Beige" VerticalAlignment="Top">
                    <Separator VerticalAlignment="Top" Margin="50,0,50,0"></Separator>
                    <StackPanel HorizontalAlignment="Stretch" Margin="0,20,0,0" VerticalAlignment="Top">
                        <WrapPanel Margin="0,0,0,80" HorizontalAlignment="Center">
                            <Controls:Tile x:Name="tabTileAddLanguage" Width="150" Height="150" Title="{DynamicResource ResourceKey=AddLanguage}" 
                                       Click="tabTileAddLanguage_Click" Content="//TODO InsertImage" Margin="40,0,40,0"/>
                            <Controls:Tile x:Name="tabTileLanguageOverview" Width="150" Height="150" Title="{DynamicResource ResourceKey=LanguageOverview}" 
                                       Click="tabTileLanguageOverview_Click" Content="//TODO InsertImage" Margin="40,0,40,0"/>
                        </WrapPanel>
                    </StackPanel>
                    <ContentControl x:Name="userControlLanguages" Margin="0,20,0,0"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemUsers"  IsEnabled="False" Visibility="Collapsed" Header="{DynamicResource ResourceKey=ManageUsers}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,0,-40,0">
                <Grid x:Name="grdUsers" Background="Beige" VerticalAlignment="Top">
                    <Separator VerticalAlignment="Top" Margin="50,0,50,0"></Separator>
                    <StackPanel HorizontalAlignment="Stretch" Margin="0,20,0,0" VerticalAlignment="Top">
                        <WrapPanel Margin="0,0,0,80" HorizontalAlignment="Center">
                            <Controls:Tile x:Name="tabTileUserOverview" Width="150" Height="150" Title="{DynamicResource ResourceKey=UserOverview}" 
                                       Click="tabTileUserOverview_Click" Content="//TODO InsertImage" Margin="40,0,40,0"/>
                        </WrapPanel>
                    </StackPanel>
                    <ContentControl x:Name="userControlUsers" Margin="0,20,0,0" />
                </Grid>
            </TabItem>
            <TabItem x:Name="tabItemSettings" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="60,0,-60,0">
                <TabItem.Header>
                    <Button x:Name="btnSettings" Click="btnSettings_Click" Background="Beige" BorderThickness="0">
                        <Image Source="/Resources/Icons/32_CogwheelSettings.png" Height="20" Width="20"/>
                    </Button>
                </TabItem.Header>
                <Grid x:Name="grdSettings" Background="Beige" VerticalAlignment="Top">
                    <Separator VerticalAlignment="Top" Margin="50,0,50,0"></Separator>
                    <ContentControl x:Name="userControlSettings" Margin="0,20,0,0" />
                </Grid>
            </TabItem>
        </Controls:MetroAnimatedSingleRowTabControl>


