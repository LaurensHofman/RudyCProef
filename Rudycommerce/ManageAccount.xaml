<UserControl x:Class="Rudycommerce.ManageAccount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rudycommerce"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="White">
    <Grid>
        <ComboBox x:Name="cmbxLanguage" SelectedValuePath="Content" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300">
            <ComboBoxItem>English</ComboBoxItem>
            <ComboBoxItem>Nederlands</ComboBoxItem>
            <ComboBoxItem>français</ComboBoxItem>
        </ComboBox>

        <Button x:Name="btnSave" Content="Save" Click="btnSave_Click" Height="46" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="300"/>
    </Grid>
</UserControl>
