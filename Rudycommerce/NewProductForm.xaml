<UserControl x:Class="Rudycommerce.NewProductForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rudycommerce"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="1200"
             Background="White">
    <ScrollViewer>
        <Grid x:Name="grdNewProductForm">

            <Label x:Name="lblTitle" Content="Title placeholder NO-ML" FontSize="20" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

            <StackPanel Margin="0,40,0,0" HorizontalAlignment="Center">
                <TextBox x:Name="txtPrice" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="30" Width="50" />
                <TextBox x:Name="txtInitialStock" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="30" Width="50" />
                <TextBox x:Name="txtIronStock" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="30" Width="50" />
                <TextBox x:Name="txtMaxStock" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="30" Width="50" />
                <CheckBox x:Name="cbIsActive" Margin="0,30,0,0" IsChecked="True" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Width="50"/>
                <ComboBox x:Name="cmbxProductType" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" Height="30" Margin="0,30,0,0" SelectionChanged="cmbxProductType_SelectionChanged"/>
                <Button x:Name="btnSave" Content="Create NO-ML" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" Height="30" Margin="0,30" Click="btnSave_Click"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Width="200" Margin="-500,40,0,0">
                <Label x:Name="lblPrice" Content="Unit price NO-ML (€): " Margin="0,30,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Height="30"/>
                <Label x:Name="lblInitialStock" Content="Initial stock NO-ML: " Margin="0,30,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Height="30"/>
                <Label x:Name="lblIronStock" Content="Iron Stock NO-ML: " Margin="0,30,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Height="30"/>
                <Label x:Name="lblMaxStock" Content="Maximum stock NO-ML: " Margin="0,30,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Height="30"/>
                <Label x:Name="lblIsActive" Content="Is product active? NO-ML: " Margin="0,30,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Height="30"/>
                <Label x:Name="lblTypeOfProduct" Content="Type of product NO-ML: " Margin="0,30,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Height="30"/>
                
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
