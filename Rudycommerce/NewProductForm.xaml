<UserControl x:Class="Rudycommerce.NewProductForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rudycommerce"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="1200"
             Background="White">
    <Grid x:Name="grdNewProductForm">
        <Label x:Name="lblTitle" Content="Title placeholder" FontSize="20" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

        <StackPanel Margin="0,40,0,0">
            <TextBox x:Name="txtUnitPrice" VerticalAlignment="Top" Width="300" Height="30" Margin="0,30,0,0"/>
            <TextBox x:Name="txtInitialStock" VerticalAlignment="Top" Width="300" Height="30" Margin="0,30,0,0"/>
            <CheckBox x:Name="cbxIsActive" IsChecked="True" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="300" Height="30" Margin="0,30,0,0"/>
            <Label x:Name="lblDefaultLanguage" Content="Placeholder" Height="30" HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="0,30,0,0"/>
            <TextBox x:Name="txtLocalizedName" VerticalAlignment="Top" Width="300" Height="30" Margin="0,30,0,0"/>
            <TextBox x:Name="txtLocalizedDescription" VerticalAlignment="Top" Width="300" Height="30" Margin="0,30,0,0"/>
            <Button x:Name="btnSave" Content="Placeholder" VerticalAlignment="Top" Width="100" Height="30" Margin="0,60,0,0" Click="btnSave_Click"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Width="200" Margin="-500,40,0,0">
            <Label x:Name="lblUnitPrice" Content="Price (€): " VerticalContentAlignment="Center" Height="30" HorizontalContentAlignment="Right" VerticalAlignment="Top" Margin="0,30,0,0"/>
            <Label x:Name="lblInitialStock" Content="Initial Stock: " VerticalContentAlignment="Center" Height="30" HorizontalContentAlignment="Right" VerticalAlignment="Top" Margin="0,30,0,0"/>
            <Label x:Name="lblIsActive" Content="Product active: " VerticalContentAlignment="Center" Height="30" HorizontalContentAlignment="Right" VerticalAlignment="Top" Margin="0,30,0,0"/>
            <Label x:Name="lblLocalizedName" Content="Name: " VerticalContentAlignment="Center" Height="30" HorizontalContentAlignment="Right" VerticalAlignment="Top" Margin="0,90,0,0"/>
            <Label x:Name="lblLocalizedDescription" Content="Description: " VerticalContentAlignment="Center" Height="30" HorizontalContentAlignment="Right" VerticalAlignment="Top" Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
